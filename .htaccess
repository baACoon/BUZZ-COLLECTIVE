# Enable rewrite engine
RewriteEngine On

# Set landingpage.php as default for the client-side
DirectoryIndex landingpage.php

# Redirect admin requests to the admin folder
RewriteCond %{REQUEST_URI} ^/admin($|/)
RewriteRule ^admin($|/) /Buzz-collective/frontend/admin/ [L]

# Ensure the frontend works correctly
RewriteCond %{REQUEST_URI} !^/admin/
RewriteCond %{REQUEST_URI} !^/backend/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ landingpage.php [L]
